# Arquivo de pinagem para o teste do display de 7 segmentos
# Placa: Colorlight i9 (LFE5U-45F)

# --- Clock ---
# Usando o clock de 25MHz do pino P3
LOCATE COMP "clk" SITE "P3";
IOBUF PORT "clk" IO_TYPE=LVCMOS33;
FREQUENCY PORT "clk" 25.0 MHz;

# --- Entrada do Sensor ---
LOCATE COMP "sensor" SITE "C3";
IOBUF PORT "sensor" IO_TYPE=LVCMOS33 PULLMODE=DOWN;

# --- Saída do LED Vermelho ---
LOCATE COMP "led_red" SITE "B4";
IOBUF PORT "led_red" IO_TYPE=LVCMOS33 DRIVE=8;
LOCATE COMP "led_green" SITE "F20";
IOBUF PORT "led_green" IO_TYPE=LVCMOS33 DRIVE=8;

# --- (NOVO) Saída para o Buzzer ---
LOCATE COMP "pino_buzzer" SITE "D20"; # <-- Exemplo de pino, mude se necessário
IOBUF PORT "pino_buzzer" IO_TYPE=LVCMOS33 DRIVE=8;

# --- Saídas para o Motor de Passo ---
LOCATE COMP "pino_in1" SITE "D3";
LOCATE COMP "pino_in2" SITE "C17";
LOCATE COMP "pino_in3" SITE "B18";
LOCATE COMP "pino_in4" SITE "B20";
IOBUF PORT "pino_in1" IO_TYPE=LVCMOS33 DRIVE=8 SLEWRATE=FAST;
IOBUF PORT "pino_in2" IO_TYPE=LVCMOS33 DRIVE=8 SLEWRATE=FAST;
IOBUF PORT "pino_in3" IO_TYPE=LVCMOS33 DRIVE=8 SLEWRATE=FAST;
IOBUF PORT "pino_in4" IO_TYPE=LVCMOS33 DRIVE=8 SLEWRATE=FAST;

# --- Reset (opcional) ---
# Se for usar um botão de reset, descomente a linha abaixo e coloque o pino
# LOCATE COMP "reset" SITE "PINO_RESET";
# IOBUF PORT "reset" IO_TYPE=LVCMOS33 PULLMODE=DOWN;

# --- Saídas para o Display 7 Segmentos ---
# POR FAVOR, SUBSTITUA PINO_A, PINO_B, etc., pelos pinos corretos!
LOCATE COMP "seg_a" SITE "D1";
LOCATE COMP "seg_b" SITE "A3";
LOCATE COMP "seg_c" SITE "C4";
LOCATE COMP "seg_d" SITE "E3";
LOCATE COMP "seg_e" SITE "E2";
LOCATE COMP "seg_f" SITE "D2";
LOCATE COMP "seg_g" SITE "B1";

# Configuração padrão para as saídas (LEDs dos segmentos)
IOBUF PORT "seg_a" IO_TYPE=LVCMOS33 DRIVE=8;
IOBUF PORT "seg_b" IO_TYPE=LVCMOS33 DRIVE=8;
IOBUF PORT "seg_c" IO_TYPE=LVCMOS33 DRIVE=8;
IOBUF PORT "seg_d" IO_TYPE=LVCMOS33 DRIVE=8;
IOBUF PORT "seg_e" IO_TYPE=LVCMOS33 DRIVE=8;
IOBUF PORT "seg_f" IO_TYPE=LVCMOS33 DRIVE=8;
IOBUF PORT "seg_g" IO_TYPE=LVCMOS33 DRIVE=8;
